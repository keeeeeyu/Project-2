<%- include('../partials/header') %>
<h1 style="text-align: center;">Share Your Travel Tips!</h1>
<div class="form">
    <form action="/countries/<%= country._id %>/trips/new" method="POST">
        <div class="row">
            <div class="col-md-4 offset-sm-1">
                <label>City: </label>
                <input type="text" name="city" autocomplete="off"><br>
                <label>Month: </label>
                <select name="month">
                    <option value="January">January</option>
                    <option value="February">February</option>
                    <option value="March">March</option>
                    <option value="April">April</option>
                    <option value="May">May</option>
                    <option value="June">June</option>
                    <option value="July">July</option>
                    <option value="August">August</option>
                    <option value="September">September</option>
                    <option value="October">October</option>
                    <option value="November">November</option>
                    <option value="December">December</option>
                </select><br>
                <label>Restaurant: </label>
                <input type="text" name="restaurant" autocomplete="off"><br>
                <label>Hotel: </label>
                <input type="text" name="hotel" autocomplete="off"><br>
                <label>Trip Tips: </label>
                <textarea class="tip-text" name="tip"></textarea><br>
                <input type="submit" class="btn btn-secondary" id="add-btn" value="Add Tip">
            </div>
        </div>
    </form>
</div>
</div>
<%- include('../partials/footer') %> 